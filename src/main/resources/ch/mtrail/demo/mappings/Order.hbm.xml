<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ch.mtrail.demo.model.Order" table="orders">
        <id name="orderId" type="java.lang.Integer">
            <column name="ORDER_ID" />
            <generator class="identity" />
        </id>
        <property name="amount" type="integer">
            <column name="AMOUNT" length="10" not-null="true" unique="true" />
        </property>
        <many-to-one name="stock" column="stock_id" class="ch.mtrail.demo.model.Stock" not-null="true">
        </many-to-one>
    </class>
</hibernate-mapping>